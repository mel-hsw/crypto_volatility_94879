# Environment Configuration Example
# Copy this file to .env and update with your actual values (if needed)
# Note: Most values have sensible defaults and work out of the box

# =============================================================================
# Coinbase WebSocket Configuration
# =============================================================================
COINBASE_WS_URL=wss://advanced-trade-ws.coinbase.com

# =============================================================================
# Kafka Configuration
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_RAW=ticks.raw
KAFKA_TOPIC_FEATURES=ticks.features

# =============================================================================
# Model Configuration
# =============================================================================
MODEL_VERSION=random_forest
MODEL_PATH=models/artifacts/random_forest/model.pkl
MODEL_VARIANT=ml
# MODEL_VARIANT options: 'ml' (Random Forest) or 'baseline' (Z-score baseline)

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=http://localhost:8000

# =============================================================================
# MLflow Configuration
# =============================================================================
MLFLOW_TRACKING_URI=http://localhost:5001
MLFLOW_EXPERIMENT_NAME=volatility_detection

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# Prometheus Configuration
# =============================================================================
PROMETHEUS_PORT=9090

# =============================================================================
# Grafana Configuration
# =============================================================================
GRAFANA_PORT=3000
GRAFANA_USER=admin
# IMPORTANT: Change this password in production!
# Default password for development: gafanap4ssw0rd
GRAFANA_PASSWORD=CHANGE_ME_IN_PRODUCTION

# =============================================================================
# Evidently Configuration
# =============================================================================
EVIDENTLY_REPORT_PATH=reports/evidently
